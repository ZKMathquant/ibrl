[metadata]
name = ibrl
version = 0.1.0
description = Infrabayesian Reinforcement Learning Framework
long_description = file: README.md
long_description_content_type = text/markdown
url = https://github.com/yourusername/ibrl
license = MIT
classifiers =
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3.8
    Programming Language :: Python :: 3.9
    Programming Language :: Python :: 3.10
    Programming Language :: Python :: 3.11
    License :: OSI Approved :: MIT License

[options]
packages = find:
python_requires = >=3.8
install_requires =
    numpy>=1.21.0
    matplotlib>=3.4.0
    scipy>=1.7.0

[options.extras_require]
dev =
    pytest>=7.0.0
    pytest-cov>=3.0.0
    black>=22.0.0
